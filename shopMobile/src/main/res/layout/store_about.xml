<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/about_scrollv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_activity"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dip"
                android:background="@color/bg_view">

                <ImageView
                    android:id="@+id/store_logo_imgv"
                    android:layout_width="70.0dip"
                    android:layout_height="70.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_space"
                    android:layout_marginTop="10dip"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/category_default" />

                <TextView
                    android:id="@+id/store_name_txtv"
                    style="@style/textStyle.Medium.black"
                    android:layout_width="match_parent"
                    android:layout_height="20.0dip"
                    android:layout_marginLeft="@dimen/margin_space_half"
                    android:layout_marginRight="70dip"
                    android:layout_marginTop="@dimen/arrow_image_size"
                    android:layout_toRightOf="@id/store_logo_imgv"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxEms="6"
                    android:maxLines="1"
                    android:minWidth="80dip" />

                <TextView
                    android:id="@+id/seller_count_txtv"
                    style="@style/textStyle.Normal.black"
                    android:layout_width="match_parent"
                    android:layout_height="15.0dip"
                    android:layout_below="@id/store_name_txtv"
                    android:layout_marginLeft="@dimen/margin_space_half"
                    android:layout_marginTop="@dimen/margin_space_half"
                    android:layout_toRightOf="@id/store_logo_imgv"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxEms="6"
                    android:maxLines="1"
                    android:textColor="@color/bn" />

                <Button
                    android:id="@+id/collect1_btn"
                    android:layout_width="70dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_space"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/gary_button_shape"
                    android:drawableLeft="@drawable/guanzhu1"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/title_attention"
                    android:textColor="#333"
                    android:textSize="@dimen/textSizeNormal" />

                <Button
                    android:id="@+id/collect2_btn"
                    android:layout_width="70dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_space"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/gary_button_shape"
                    android:drawableLeft="@drawable/guanzhu2"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/title_attention2"
                    android:textColor="#333"
                    android:textSize="@dimen/textSizeNormal"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="商品"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/desccredit_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/light_red" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/dianpugoods"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="服务"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/servicecredit_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/green" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/dianpuservice"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="时效"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/deliverycredit_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="#e716bd" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/dianpusell"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/count_ll"
                android:layout_width="match_parent"
                android:layout_height="57dip"
                android:background="@color/bg_view"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                    <TextView
                        android:id="@+id/store_count_txtv"
                        style="@style/textStyle.Normal.LightGray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:focusable="true"
                        android:gravity="center_horizontal|center_vertical"
                        android:maxEms="6"
                        android:maxLines="2"
                        android:minWidth="80dip" />
                </LinearLayout>

                <View style="@style/separator_line_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                    <TextView
                        android:id="@+id/new_txtv"
                        style="@style/textStyle.Normal.LightGray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_horizontal|center_vertical"
                        android:maxEms="6"
                        android:maxLines="2"
                        android:minWidth="80dip" />
                </LinearLayout>

                <View style="@style/separator_line_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                    <TextView
                        android:id="@+id/hot_txtv"
                        style="@style/textStyle.Normal.LightGray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_horizontal|center_vertical"
                        android:maxEms="6"
                        android:maxLines="2"
                        android:minWidth="80dip" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/separator_line_margin_slice" />

            <include layout="@layout/store_about_info_slice" />

            <include layout="@layout/separator_line_margin_slice" />

            <include layout="@layout/store_about_score_slice" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

