<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yw.car.widget.swipetoloadlayout.SuperRefreshRecyclerView
        android:id="@+id/super_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/bg_view"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/empty_rlayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_view"
        android:padding="10.0dip"
        android:visibility="gone">

        <TextView
            style="@style/textStyle.Medium.Gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dip"
            android:drawablePadding="@dimen/margin_space"
            android:drawableTop="@drawable/icon_order_empty"
            android:gravity="center_horizontal"
            android:text="还没有评论" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/bg_view"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/all_btn"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/detail_comment_title_red_corner_button"
            android:text="全部(0)"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeNormal" />

        <Button
            android:id="@+id/great_btn"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_space_half"
            android:background="@drawable/detail_comment_title_pink_corner_button"
            android:text="好评(0)"
            android:textColor="#6B6F78"
            android:textSize="@dimen/textSizeNormal" />

        <Button
            android:id="@+id/average_btn"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_space_half"
            android:background="@drawable/detail_comment_title_pink_corner_button"
            android:text="中评(0)"
            android:textColor="#6B6F78"
            android:textSize="@dimen/textSizeNormal" />

        <Button
            android:id="@+id/bad_btn"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_space_half"
            android:background="@drawable/detail_comment_title_pink_corner_button"
            android:text="差评(0)"
            android:textColor="#6B6F78"
            android:textSize="@dimen/textSizeNormal" />

        <Button
            android:id="@+id/haspic_btn"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_space_half"
            android:background="@drawable/detail_comment_title_pink_corner_button"
            android:text="有图(0)"
            android:textColor="#6B6F78"
            android:textSize="@dimen/textSizeNormal" />
    </LinearLayout>
</FrameLayout>