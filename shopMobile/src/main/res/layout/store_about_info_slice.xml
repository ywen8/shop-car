<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_view"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/service_online_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/view_bg_clickable_selector">

        <TextView
            style="@style/textStyle.Normal.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginTop="@dimen/margin_space"
            android:gravity="left|center_vertical"
            android:text="在线客服"
            android:textColor="@color/bn"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/serviceonline" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_activity" />

    <RelativeLayout
        android:id="@+id/shop_code_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/view_bg_clickable_selector"
        android:visibility="gone">

        <TextView
            style="@style/textStyle.Normal.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginTop="@dimen/margin_space"
            android:gravity="left|center_vertical"
            android:text="店铺的二维码"
            android:textColor="@color/bn"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/dianpucode" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_activity" />

    <RelativeLayout
        android:id="@+id/seller_tel_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/view_bg_clickable_selector">

        <TextView
            android:id="@+id/store_txt"
            style="@style/textStyle.Normal.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginTop="@dimen/margin_space"
            android:gravity="left|center_vertical"
            android:text="商家电话"
            android:textColor="@color/bn"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/seller_tel"
            style="@style/textStyle.Normal.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginTop="@dimen/margin_space"
            android:layout_toRightOf="@+id/store_txt"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/dianputel" />
    </RelativeLayout>
</LinearLayout>