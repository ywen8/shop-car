<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_view"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/product_pic_imgv"
        android:layout_width="match_parent"
        android:layout_height="132.0dip"
        android:layout_marginTop="@dimen/margin_space_half"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_product_null" />

    <TextView
        android:id="@+id/product_name_txtv"
        android:layout_width="match_parent"
        android:layout_height="35.0dip"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxEms="6"
        android:maxLines="2"
        android:paddingLeft="@dimen/margin_space"
        android:paddingRight="@dimen/margin_space"
        android:textColor="#222222"
        android:textSize="@dimen/textSizeNormal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_price_txtv"
            style="@style/textStyle.Normal.lightRed"
            android:layout_width="100dip"
            android:layout_height="20.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="left"
            android:maxEms="6"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space" />

        <Button
            android:id="@+id/similar_btn"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_space_half"
            android:background="@drawable/button_border_w_selector"
            android:lines="1"
            android:text="@string/similar"
            android:textColor="@color/color_font_666"
            android:textSize="@dimen/textSizeNormal" />
    </RelativeLayout>
</LinearLayout>
