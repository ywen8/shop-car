<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_view"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_marginTop="@dimen/margin_space"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_product_null" />

        <TextView
            android:id="@+id/goods_name"
            style="@style/textStyle.Normal.black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginRight="@dimen/margin_space"
            android:ellipsize="end"
            android:maxLines="2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space">

            <TextView
                android:id="@+id/needer_num"
                style="@style/textStyle.Normal.LightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_spell_people" />

            <TextView
                android:id="@+id/team_price"
                style="@style/textStyle.Normal.lightRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_space"
                android:layout_toRightOf="@+id/needer_num" />

            <TextView
                android:id="@+id/shop_price"
                style="@style/textStyle.Normal.LightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_space"
                android:layout_toRightOf="@+id/team_price" />

            <Button
                android:id="@+id/fight_groups_btn"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_shape"
                android:text="去开团"
                android:textColor="@color/bg_view" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
