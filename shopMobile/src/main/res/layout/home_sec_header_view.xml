<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="666dip"
        android:background="@color/bg_view"
        android:orientation="vertical">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/home_banner_cbanner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#ffffff"
            app:canLoop="true" />

        <include
            layout="@layout/home_sec_menu_navigation_slice"
            android:visibility="visible" />

        <include
            android:id="@+id/flash_layout"
            layout="@layout/home_flash_sale"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/home_center_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_5"
                android:scaleType="center"
                android:src="@drawable/headtiao" />

            <LinearLayout
                android:id="@+id/home_center_li_gonggao"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <com.yw.car.view.TextSwitchView
                    android:id="@+id/home_center_gonggao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_ad_middle_top_imgv"
            android:layout_width="match_parent"
            android:layout_height="130dip"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_product_null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_rim_smallmaintain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/view_bg_clickable_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/xiaobaoyang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="小保养"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_rim_bigsmallmaintain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/view_bg_clickable_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/dabaoyang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="大保养"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_rim_car_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/view_bg_clickable_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/qcfw" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="汽车服务点"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_rim_weizhang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/view_bg_clickable_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/weizhangchaxun" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="违章查询"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_rim_baoxian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/view_bg_clickable_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/baoxian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="保险"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_rim_weixiu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/view_bg_clickable_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/weixiu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="维修"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_rim_ershouche"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/view_bg_clickable_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/ershoucheguzhi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="二手车估值"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_rim_meirong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/view_bg_clickable_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/qichemeirong" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="汽车美容"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_rim_youka"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/view_bg_clickable_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/youka" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="油卡"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_rim_gengduo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/view_bg_clickable_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/more" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="更多"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dip"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="220dip"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.yw.car.widget.SPBorderImageView
                    android:id="@+id/icon_ad_middle_left1_imgv"
                    android:layout_width="match_parent"
                    android:layout_height="110dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_product_null"
                    app:borderBottomShow="true"
                    app:borderRightShow="true" />

                <com.yw.car.widget.SPBorderImageView
                    android:id="@+id/icon_ad_middle_left2_imgv"
                    android:layout_width="match_parent"
                    android:layout_height="110dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_product_null"
                    app:borderRightShow="true" />
            </LinearLayout>

            <com.yw.car.widget.SPBorderImageView
                android:id="@+id/icon_ad_middle_right_imgv"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_product_null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="214dip"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:src="@drawable/icon_home_new_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="174dip"
                android:orientation="horizontal">

                <com.yw.car.widget.SPBorderImageView
                    android:id="@+id/icon_ad_new_right_imgv"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_product_null" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.yw.car.widget.SPBorderImageView
                        android:id="@+id/icon_ad_new_right1_imgv"
                        android:layout_width="match_parent"
                        android:layout_height="87dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_product_null"
                        app:borderBottomShow="true"
                        app:borderRightShow="true" />

                    <com.yw.car.widget.SPBorderImageView
                        android:id="@+id/icon_ad_new_right2_imgv"
                        android:layout_width="match_parent"
                        android:layout_height="87dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_product_null"
                        app:borderRightShow="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="276dip"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:src="@drawable/icon_home_hot_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="246dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="113dip"
                    android:orientation="horizontal">

                    <com.yw.car.widget.SPBorderImageView
                        android:id="@+id/icon_ad_hot_top_right_imgv"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_product_null"
                        app:borderBottomShow="true"
                        app:borderRightShow="true" />

                    <com.yw.car.widget.SPBorderImageView
                        android:id="@+id/icon_ad_hot_top_left_imgv"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_product_null"
                        app:borderBottomShow="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="123dip"
                    android:orientation="horizontal">

                    <com.yw.car.widget.SPBorderImageView
                        android:id="@+id/icon_ad_hot_bottom1_imgv"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_product_null"
                        app:borderRightShow="true" />

                    <com.yw.car.widget.SPBorderImageView
                        android:id="@+id/icon_ad_hot_bottom2_imgv"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_product_null"
                        app:borderRightShow="true" />

                    <com.yw.car.widget.SPBorderImageView
                        android:id="@+id/icon_ad_hot_bottom3_imgv"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_product_null"
                        app:borderRightShow="true" />

                    <com.yw.car.widget.SPBorderImageView
                        android:id="@+id/icon_ad_hot_bottom4_imgv"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_product_null"
                        app:borderRightShow="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:src="@drawable/icon_home_youlike_title" />
    </LinearLayout>
</ScrollView>