<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/comment_ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_pic_imgv"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_space"
                android:layout_marginTop="5dip"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_product_null" />

            <TextView
                android:id="@+id/product_name_txtv"
                style="textStyle.Big.black"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/product_pic_imgv"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxEms="6"
                android:maxLines="2" />
        </RelativeLayout>

        <EditText
            android:id="@+id/comment_content_edtv"
            style="@style/textStyle.Normal.black"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:background="@color/bg_header"
            android:focusable="true"
            android:gravity="top"
            android:hint="@string/hint_comment"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" />

        <LinearLayout
            android:id="@+id/Edit_ll"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/bg_header"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/limit_txtv"
                style="@style/textStyle.Normal.black"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:hint="120/0"
                android:maxLines="1"
                android:textColor="@color/search_title_hint_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/addImg"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:src="@drawable/add" />

            <com.yw.car.widget.NoScrollGridView
                android:id="@+id/picGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@color/bg_view"
                android:scrollbars="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/anonymous_evaluation_rb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/radio_selector"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/anonymous_evaluation_tv"
                style="@style/textStyle.Medium.Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匿名评价" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dip">

            <ImageView
                android:id="@+id/log_service_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/logistics_service" />

            <TextView
                style="@style/textStyle.Normal.black"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/log_service_img"
                android:layout_toRightOf="@+id/log_service_img"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="评价" />

            <TextView
                android:id="@+id/textView8"
                style="@style/textStyle.Normal.Gray"
                android:layout_width="150dip"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="满意请给5星哦!" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:orientation="horizontal">

            <TextView
                style="@style/textStyle.Normal.LightGray"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_space"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="商品等级" />

            <com.yw.car.widget.SPStarView
                android:id="@+id/comment_descript_starv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:orientation="horizontal">

            <TextView
                style="@style/textStyle.Normal.LightGray"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_space"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="物流等级" />

            <com.yw.car.widget.SPStarView
                android:id="@+id/comment_deliver_starv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:orientation="horizontal">

            <TextView
                style="@style/textStyle.Normal.LightGray"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_space"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="服务等级" />

            <com.yw.car.widget.SPStarView
                android:id="@+id/comment_service_starv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:orientation="horizontal">

            <TextView
                style="@style/textStyle.Normal.LightGray"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_space"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="商品评价" />

            <com.yw.car.widget.SPStarView
                android:id="@+id/comment_good_starv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_view"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dip">

            <ImageView
                android:id="@+id/service_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/logistics_service" />

            <TextView
                style="@style/textStyle.Normal.black"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="11dp"
                android:layout_toRightOf="@+id/service_img"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="服务评价" />

            <TextView
                style="@style/textStyle.Normal.Gray"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="满意请给5星哦!" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:orientation="horizontal">

            <TextView
                style="@style/textStyle.Normal.LightGray"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_space"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="服务等级" />

            <com.yw.car.widget.SPStarView
                android:id="@+id/comment_descript_starv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:orientation="horizontal">

            <TextView
                style="@style/textStyle.Normal.LightGray"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_space"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="物流等级" />

            <com.yw.car.widget.SPStarView
                android:id="@+id/comment_deliver_starv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:orientation="horizontal">

            <TextView
                style="@style/textStyle.Normal.LightGray"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_space"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="商品等级" />

            <com.yw.car.widget.SPStarView
                android:id="@+id/comment_service_starv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

