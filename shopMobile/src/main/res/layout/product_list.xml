<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_view"
        android:orientation="vertical">

        <com.yw.car.widget.SPProductFilterTabView
            android:id="@+id/filter_tabv"
            android:layout_width="fill_parent"
            android:layout_height="40dip" />

        <View style="@style/separator_line" />

        <com.yw.car.widget.swipetoloadlayout.SuperRefreshRecyclerView
            android:id="@+id/super_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_view"
            android:scrollbars="none" />

        <RelativeLayout
            android:id="@+id/empty_lstv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/bg_view"
            android:padding="10.0dip"
            android:visibility="gone">

            <TextView
                android:id="@+id/empty_txtv"
                style="@style/textStyle.Normal.black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:lines="1"
                android:text="没有任何数据,换个条件试试" />
        </RelativeLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/right_rlayout"
        android:name="com.yw.car.fragment.SPProductListFilterFragment"
        android:layout_width="300dip"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:tag="right" />
</android.support.v4.widget.DrawerLayout>