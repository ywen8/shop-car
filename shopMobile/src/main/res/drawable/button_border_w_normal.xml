<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/button_bg_gray" />
            <corners android:radius="2dp" />
            <stroke
                android:width="0.5dp"
                android:color="@color/button_bg_gray" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/bg_view"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/bg_view"
                android:startColor="@color/bg_view"
                android:type="linear" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>