<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_index_gallery_item_rlayout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:clickable="false">

    <View
        style="@style/separator_line"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/store_goods_class_title_txtv"
        style="@style/textStyle.Medium.black"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_space"
        android:gravity="center_vertical|left"
        android:singleLine="true" />

    <TextView
        android:id="@+id/look_more_txtv"
        style="@style/textStyle.Normal.subTitle"
        android:layout_width="200dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_space"
        android:gravity="center_vertical|right"
        android:text="查看全部" />

    <View
        style="@style/separator_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>