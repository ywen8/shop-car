<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dip"
        android:background="@color/bg_view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="105dip"
            android:layout_margin="20dip"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pay_completed_imgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:src="@drawable/icon_pay_success" />

            <TextView
                android:id="@+id/pay_trade_no_txtv"
                style="@style/textStyle.Normal.black"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="@dimen/margin_space_half"
                android:layout_marginRight="@dimen/margin_space"
                android:layout_marginTop="30dip"
                android:layout_toRightOf="@id/pay_completed_imgv"
                android:gravity="left"
                android:singleLine="true" />

            <TextView
                android:id="@+id/pay_money_txtv"
                style="@style/textStyle.Normal.black"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_below="@id/pay_trade_no_txtv"
                android:layout_marginLeft="@dimen/margin_space_half"
                android:layout_marginRight="@dimen/margin_space"
                android:layout_toRightOf="@id/pay_completed_imgv"
                android:gravity="left"
                android:singleLine="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/pay_tip_txtv"
            style="@style/textStyle.Normal.lightRed"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="-10dip"
            android:gravity="center_horizontal|top"
            android:singleLine="true"
            android:text="感谢您的购买, 我们将会尽快发货" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:orientation="vertical">

            <Button
                android:id="@+id/order_btn"
                android:layout_width="120dip"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/button_selector"
                android:text="@string/look_order"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/home_or_repay_btn"
                android:layout_width="120dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_yellow_selector"
                android:text="@string/go_home"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/separator_line" />

</LinearLayout>