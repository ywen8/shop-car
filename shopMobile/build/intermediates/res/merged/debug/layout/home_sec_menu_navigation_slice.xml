        <!--android:id="@+id/home_menu_shopcart_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1.0"-->
        <!--android:background="@drawable/view_bg_clickable_selector"-->
        <!--android:clickable="true"-->
        <!--android:gravity="center"-->
        <!--android:orientation="vertical">-->

        <!--<ImageView-->
        <!--android:id="@+id/home_menu_shopcart_imgv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/jf" />-->

        <!--<TextView-->
        <!--android:id="@+id/home_menu_shopcart_txtv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/home_menu_text_top"-->
        <!--android:text="@string/text_item_integral_mall"-->
        <!--android:textColor="@color/color_font_666"-->
        <!--android:textSize="@dimen/textSizeNormal" />-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:id="@+id/home_menu_person_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/view_bg_clickable_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_menu_person_imgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_menu_fight_group" />

            <TextView
                android:id="@+id/home_menu_person_txtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_menu_text_top"
                android:text="我要拼团"
                android:textColor="@color/color_font_666"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>