<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/ambuits_center_bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/car_service_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/car_service_baoxian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:checked="true"
                    android:text="保险点"
                    android:textColor="@drawable/radiobutton_select_textcolor"
                    android:textSize="@dimen/sp_14" />

                <RadioButton
                    android:id="@+id/car_service_baoyang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="保养点"
                    android:textColor="@drawable/radiobutton_select_textcolor"
                    android:textSize="@dimen/sp_14" />

                <RadioButton
                    android:id="@+id/car_service_weixiu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="维修点"
                    android:textColor="@drawable/radiobutton_select_textcolor"
                    android:textSize="@dimen/sp_14" />

                <RadioButton
                    android:id="@+id/car_service_ershoueche"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="二手车回收点"
                    android:textColor="@drawable/radiobutton_select_textcolor"
                    android:textSize="@dimen/sp_14" />
            </RadioGroup>

        </FrameLayout>
    </LinearLayout>

    <com.yw.car.widget.NoScrollViewPager
        android:id="@+id/car_service_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>