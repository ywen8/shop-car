<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="@color/bg_view">

    <LinearLayout
        android:id="@+id/personal_order_waitpay_layout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/view_bg_clickable_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_order_purchased_icon" />

        <TextView
            style="@style/textStyle.Normal.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/person_order_waitpay"
            android:textColor="@color/person_info_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_order_waitsend_layout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/view_bg_clickable_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_order_send_icon" />

        <TextView
            style="@style/textStyle.Normal.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/person_order_waitsend"
            android:textColor="@color/person_info_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_order_waitreceive_layout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/view_bg_clickable_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_order_accepted_icon" />

        <TextView
            style="@style/textStyle.Normal.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/person_order_waitreceive"
            android:textColor="@color/person_info_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_order_waitcomment_layout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/view_bg_clickable_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_order_comment_icon" />

        <TextView
            style="@style/textStyle.Normal.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/person_order_waitcomment"
            android:textColor="@color/person_info_text" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/h_line" />

    <LinearLayout
        android:id="@+id/personal_order_returned"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/view_bg_clickable_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_order_returned_icon" />

        <TextView
            style="@style/textStyle.Normal.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/person_order_returned"
            android:textColor="@color/person_info_text" />
    </LinearLayout>
</LinearLayout>