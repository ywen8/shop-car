<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_activity"
    android:paddingBottom="@dimen/margin_space_half"
    android:paddingTop="@dimen/margin_space_half">

    <com.yw.car.widget.SPBorderImageView
        android:id="@+id/product_pic_imgv"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_space"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_product_null" />

    <TextView
        android:id="@+id/product_name_txtv"
        style="@style/textStyle.Normal.LightGray"
        android:layout_width="match_parent"
        android:layout_height="35.0dip"
        android:layout_marginLeft="@dimen/margin_space_half"
        android:layout_marginRight="80dip"
        android:layout_marginTop="@dimen/margin_space_half"
        android:layout_toRightOf="@id/product_pic_imgv"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxEms="6"
        android:maxLines="2" />

    <TextView
        android:id="@+id/product_price_txtv"
        style="@style/textStyle.Normal.lightRed"
        android:layout_width="80dip"
        android:layout_height="30.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_space"
        android:layout_marginTop="@dimen/margin_space_half"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:maxEms="6"
        android:maxLines="1" />

    <TextView
        android:id="@+id/product_spec_txtv"
        style="@style/textStyle.Normal.Gray"
        android:layout_width="match_parent"
        android:layout_height="20.0dip"
        android:layout_below="@id/product_name_txtv"
        android:layout_marginLeft="@dimen/margin_space_half"
        android:layout_marginRight="60dip"
        android:layout_toRightOf="@id/product_pic_imgv"
        android:ellipsize="end"
        android:gravity="left"
        android:maxEms="6"
        android:maxLines="1" />

    <TextView
        android:id="@+id/exchange_txtv"
        style="@style/textStyle.Normal.Gray"
        android:layout_width="150dp"
        android:layout_height="20.0dip"
        android:layout_below="@id/product_spec_txtv"
        android:layout_marginLeft="@dimen/margin_space_half"
        android:layout_marginRight="60dip"
        android:layout_toRightOf="@id/product_pic_imgv"
        android:drawableLeft="@drawable/icon_seven_day"
        android:drawablePadding="3dp"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxEms="6"
        android:maxLines="1"
        android:text="7天无理由退换货"
        android:visibility="gone" />

    <TextView
        android:id="@+id/product_count_txtv"
        style="@style/textStyle.Normal.subTitle"
        android:layout_width="60dip"
        android:layout_height="20.0dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/product_price_txtv"
        android:layout_marginRight="@dimen/margin_space"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:maxEms="6"
        android:maxLines="1" />

    <Button
        android:id="@+id/product_apply_return_btn"
        style="@style/textStyle.Small.black"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/product_count_txtv"
        android:layout_marginRight="@dimen/margin_space_half"
        android:layout_marginTop="@dimen/margin_space_half"
        android:background="@drawable/button_border_w_selector"
        android:text="申请售后"
        android:visibility="gone" />

    <Button
        android:id="@+id/product_apply_comment_btn"
        style="@style/textStyle.Small.lightRed"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/product_apply_return_btn"
        android:layout_marginRight="@dimen/margin_space_half"
        android:layout_marginTop="5dip"
        android:background="@drawable/button_border_r_selector"
        android:text="去评价"
        android:visibility="gone" />
</RelativeLayout>
