<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/botton_nav_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_bottom_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <LinearLayout
                android:id="@+id/ll_attention2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_attention2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_attention_normal" />

                <TextView
                    android:id="@+id/tv_attention"
                    style="@style/textStyle.Small.Gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:text="@string/title_attention" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_enter_store2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_enter_store" />

                <TextView
                    android:id="@+id/tv_bottom_store"
                    style="@style/textStyle.Small.Gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal"
                    android:text="@string/store" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_bottom_cart2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_space_half"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_bottom_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/icon_shopcart" />

                <TextView
                    style="@style/textStyle.Small.Gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_bottom_cart"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:text="@string/tab_item_shopcart" />

                <RelativeLayout
                    android:id="@+id/rl_cart_count2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/margin_space"
                    android:layout_marginTop="-5dp" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_buy_cart"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:text="@string/product_buy_now"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>

