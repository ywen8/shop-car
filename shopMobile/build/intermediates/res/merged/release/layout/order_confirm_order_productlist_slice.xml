<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_product_flayout"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="@drawable/view_bg_clickable_selector"
    android:clickable="true"
    android:orientation="horizontal">

    <HorizontalScrollView
        android:id="@+id/order_product_scrollv"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="108dip">

        <LinearLayout
            android:id="@+id/product_list_gallery_lyaout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <TextView
        android:id="@+id/order_product_count_txtv"
        style="@style/textStyle.Normal.black"
        android:layout_width="80dip"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="28dip"
        android:gravity="center"
        android:text="共5件商品" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/margin_space"
        android:src="@drawable/personal_arrow_right" />
</FrameLayout>