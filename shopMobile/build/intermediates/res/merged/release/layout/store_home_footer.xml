<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/section_foot_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_view"
        android:gravity="right">

        <RelativeLayout
            android:id="@+id/more_rl"
            android:layout_width="60dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/section_more_imgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_space"
                android:background="@color/white"
                android:src="@drawable/icon_store_section_more" />

            <TextView
                style="@style/textStyle.Small.Gray"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_space_half"
                android:layout_toLeftOf="@+id/section_more_imgv"
                android:gravity="center_vertical|left"
                android:text="@string/more" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>