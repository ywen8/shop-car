<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/group_ad_imgv"
            android:layout_width="match_parent"
            android:layout_height="116dip"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_product_null"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/icon_flash_title_bg"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/icon_flash_title_bg"
            android:gravity="center"
            android:text="超级秒杀"
            android:textColor="#e23435"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="bold" />

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magic_indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/bg_view" />

        <View style="@style/separator_line" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
