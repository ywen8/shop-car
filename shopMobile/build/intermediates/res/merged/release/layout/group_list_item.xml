<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="232dip"
    android:background="@color/bg_view"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="132.0dip">

        <ImageView
            android:id="@+id/product_pic_imgv"
            android:layout_width="match_parent"
            android:layout_height="132.0dip"
            android:layout_marginTop="@dimen/margin_space_half"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_product_null" />

        <TextView
            android:id="@+id/rebate_txtv"
            style="@style/textStyle.Small.white"
            android:layout_width="45dip"
            android:layout_height="26.0dip"
            android:layout_gravity="top|right"
            android:background="@color/light_red"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="6"
            android:maxLines="1"
            android:textAlignment="center" />

        <RelativeLayout
            android:id="@+id/over_llayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_alph55"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/textStyle.Normal.white"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/group_over_txt_bg"
                android:gravity="center"
                android:maxEms="6"
                android:maxLines="1"
                android:text="已结束" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/product_name_txtv"
        style="@style/textStyle.Normal.LightGray"
        android:layout_width="match_parent"
        android:layout_height="35.0dip"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxEms="6"
        android:maxLines="2" />

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="65dip"
        android:background="@color/bg_view">

        <TextView
            android:id="@+id/virtual_num_txtv"
            style="@style/textStyle.Normal.Gray"
            android:layout_width="150dp"
            android:layout_height="20.0dip"
            android:layout_marginLeft="@dimen/margin_space"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxEms="6"
            android:maxLines="1" />

        <TextView
            android:id="@+id/end_time_txtv"
            style="@style/textStyle.Normal.LightGray"
            android:layout_width="match_parent"
            android:layout_height="20.0dip"
            android:layout_below="@+id/virtual_num_txtv"
            android:layout_marginLeft="@dimen/margin_space"
            android:drawableLeft="@drawable/end_time"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:maxEms="6"
            android:maxLines="1" />

        <TextView
            android:id="@+id/goods_price_txtv"
            style="@style/textStyle.Normal.lightRed"
            android:layout_width="150dp"
            android:layout_height="25.0dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/end_time_txtv"
            android:layout_marginLeft="@dimen/margin_space"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxEms="6"
            android:maxLines="1" />

        <TextView
            android:id="@+id/market_price_txtv"
            style="@style/textStyle.Normal.Gray"
            android:layout_width="150dp"
            android:layout_height="25.0dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/end_time_txtv"
            android:layout_marginRight="@dimen/margin_space"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxEms="6"
            android:maxLines="1" />
    </RelativeLayout>
</LinearLayout>
