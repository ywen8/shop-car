<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_third"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/txt_old_pwd"
        style="@style/textStyle.Normal.LightGray"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_row"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/modify_pwd_old_pwd" />

    <EditText
        android:id="@+id/old_password_edtv"
        style="@style/edit_text"
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/txt_old_pwd"
        android:layout_toRightOf="@+id/txt_old_pwd"
        android:digits="@string/register_edit_digits"
        android:hint="@string/modify_pwd_old_pwd"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="@dimen/margin_space" />

    <View
        android:id="@+id/line1"
        style="@style/separator_line"
        android:layout_below="@+id/old_password_edtv"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/txt_new_pwd"
        style="@style/textStyle.Normal.LightGray"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_row"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line1"
        android:gravity="center"
        android:text="@string/modify_pwd_new_pwd" />

    <EditText
        android:id="@+id/password_edtv"
        style="@style/edit_text"
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/txt_new_pwd"
        android:layout_toRightOf="@+id/txt_new_pwd"
        android:digits="@string/register_edit_digits"
        android:hint="@string/modify_pwd_new_pwd"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="@dimen/margin_space" />

    <View
        android:id="@+id/line2"
        style="@style/separator_line"
        android:layout_below="@+id/password_edtv"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/txt_confirm_pwd"
        style="@style/textStyle.Normal.LightGray"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_row"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line2"
        android:gravity="center"
        android:text="@string/modify_pwd_confirm_pwd" />

    <EditText
        android:id="@+id/repassword_edtv"
        style="@style/edit_text"
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/txt_confirm_pwd"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txt_confirm_pwd"
        android:digits="@string/register_edit_digits"
        android:hint="@string/hint_input_repassword"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="@dimen/margin_space" />

    <View
        android:id="@+id/line3"
        style="@style/separator_line"
        android:layout_below="@+id/repassword_edtv"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/txt_error_info"
        style="@style/textStyle.Normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_row"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line3"
        android:layout_marginTop="11dp"
        android:gravity="left|center"
        android:text="@string/register_error_info"
        android:textColor="@color/light_red" />

    <Button
        android:id="@+id/ok_btn"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_error_info"
        android:layout_marginTop="10dp"
        android:text="@string/modify_pwd_submit" />
</RelativeLayout>
