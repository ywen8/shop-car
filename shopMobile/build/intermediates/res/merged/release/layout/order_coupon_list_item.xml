<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/coupon_layout"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/green_blue">

        <TextView
            android:id="@+id/coupon_money_txtv"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:gravity="center_horizontal|bottom"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/condition_txtv"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_below="@+id/coupon_money_txtv"
            android:gravity="center_horizontal"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeNormal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/coupon_top_rlayout"
        android:background="@color/bg_activity">

        <TextView
            android:id="@+id/coupon_title_txtv"
            style="@style/textStyle.Normal.LightGray"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginTop="@dimen/margin_space"
            android:background="@color/green_blue"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="商城券"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/coupon_limit_txtv"
            style="@style/textStyle.Normal.Gray"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/margin_space"
            android:layout_toRightOf="@+id/coupon_title_txtv"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="2" />

        <TextView
            android:id="@+id/coupon_name_txtv"
            style="@style/textStyle.Normal.Gray"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/margin_space"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="2" />

        <TextView
            android:id="@+id/use_end_time_txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_space"
            android:layout_marginLeft="@dimen/margin_space"
            android:gravity="center_horizontal"
            android:lines="1"
            android:textSize="@dimen/textSizeNormal" />

        <Button
            android:id="@+id/check_btn"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignBottom="@+id/use_end_time_txtv"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_checkno" />
    </RelativeLayout>
</LinearLayout>